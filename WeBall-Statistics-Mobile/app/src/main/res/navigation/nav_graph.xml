<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/home">

    <fragment
        android:id="@+id/home"
        android:name="uom.team2.weball_statistics.UI_Controller.Home"
        android:label="@string/home_fragment_label"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_home_to_leadersStats"
            app:destination="@id/leadersStats" />
    </fragment>
    <fragment
        android:id="@+id/leadersStats"
        android:name="uom.team2.weball_statistics.UI_Controller.CompletedStatisticsController.LeadersStats"
        android:label="LeadersStats" >
        <action
            android:id="@+id/action_leadersStats_to_expandedLeadersStat"
            app:destination="@id/expandedLeadersStat" />
    </fragment>
    <fragment
        android:id="@+id/expandedLeadersStat"
        android:name="uom.team2.weball_statistics.UI_Controller.CompletedStatisticsController.LeadersStatsController.ExpandedLeadersStat"
        android:label="ExpandedLeadersStat" />
</navigation>